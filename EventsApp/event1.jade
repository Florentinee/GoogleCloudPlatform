  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark.fixed-top
      a.navbar-brand.container-nav(href='#') Eveniments
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarsExampleDefault', aria-controls='navbarsExampleDefault', aria-expanded='false', aria-label='Toggle navigation')
    main.container(role='main')
      .starter-template
        //-  Locatie: ${response.json.results[0].formatted_address} </br>
        div.row
            div.col-md-6
                div.col-md-12
                  .form-group
                  label(for='selectEvent') Select an event
                  select#selectEvent.form-control
                    option(value='1' selected='') #{labelEv1}
                    option(value='2') #{labelEv2}
                div.col-md-12.mt-2
                    span.text-center.bold-text Informations
                div.col-md-12.mt-2
                    span Eveniment: #{ev_name}
                div.col-md-12
                    span Data incepere: #{ev_start}
                div.col-md-12.mt-2
                    span Location: #{location_name}
                div.col-md-12
                    a(href='#{link}', alt='location', target='_new' class='btn btn-primary btn-sm') Click to view location!
                div.col-md-12.mt-2
                    span List of tasks
                div.col-md-12
                    each item in list_tasks
                        li #{item}
                        //- if()
            div.col-md-6
                divc.col-md-12
                    img(src='#{link_img}')
    

    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
